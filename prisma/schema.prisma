// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Question {
  id       Int      @id @default(autoincrement())
  title    String
  content  String?
  author   User?    @relation(fields: [authorId], references: [id])
  authorId Int?
  answers  Answer[]

  @@map(name: "questions")
}

model upVotes {
  idQuestion   Int    @id
  numberUpVote Int    @default(0)
  voters       User[]
}

model Answer {
  id       Int      @id @default(autoincrement())
  content  String
  
  author   User?    @relation(fields: [authorId], references: [id])
  authorId Int?

  question Question @relation(fields: [questionId], references: [id])
  questionId Int

  @@map(name: "answers")
}

model User {
  id                Int        @id @default(autoincrement())
  name              String?
  email             String?    @unique
  questions         Question[]
  answers           Answer[]
  role              Role       @default(USER)
  upVotes           upVotes?   @relation(fields: [upVotesIdQuestion], references: [idQuestion])
  upVotesIdQuestion Int?

  @@map(name: "users")
}

enum Role {
  USER
  ADMIN
}
